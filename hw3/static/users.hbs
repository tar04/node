<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>

<div style="background-color: rebeccapurple">

    {{#each users }}
        <div style="display: flex;flex-direction: column;row-gap: 5px;color: snow;padding-left: 15px">
            <div>First name: {{this.firstName}}</div>
            <div>Last name: {{this.lastName}}</div>
            <div>Email: {{this.email}}</div>
            <div>Password: {{this.password}}</div>
            <div>Age: {{this.age}}</div>
            <div>City: {{this.city}}</div>
            <form action="/users/{{this.id}}">
                <input type="submit" value="Info" style="border-radius: 5px; padding: 5px 15px;">
            </form>
        </div>
        <hr>
    {{/each}}
</div>

</body>
</html>